# Environment
APP_ENV=dev

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here

# LLM Configuration
LLM_BACKEND=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# OpenRouter (optional, for more powerful models)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Memory & Storage
VECTOR_BACKEND=chroma
VECTOR_STORE_PATH=data/chroma
SQL_DB_PATH=data/app.sqlite
STORAGE_PATH=data/storage

# Tracing & Logging
TRACE_LEVEL=info
TRACE_FILE=data/trace.jsonl

# Application Settings
APPROVAL_TIMEOUT_MINUTES=10
MAX_CLARIFY_QUESTIONS=3
ZERO_EVIDENCE_POLICY=strict
DEFAULT_TIMEZONE=Europe/Madrid

# Retrieval Settings
RETRIEVAL_TOP_K=4
ENABLE_HYBRID_SEARCH=true

# STT (Speech-to-Text)
STT_MODEL=base
STT_LANGUAGE=es
STT_DEVICE=cpu

# Feature Flags
ENABLE_VOICE=true
ENABLE_DIARY=false
